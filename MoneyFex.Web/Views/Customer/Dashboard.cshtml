@using MoneyFex.Core.Entities.Enums
@{
    ViewData["Title"] = "Customer Dashboard";
    var username = ViewBag.Username as string ?? "Customer";
    var pendingTransactions = ViewBag.PendingTransactions as int? ?? 0;
    var todayVolume = ViewBag.TodayVolume as decimal? ?? 0;
    var currencySymbol = ViewBag.CurrencySymbol as string ?? "£";
    var complianceAlerts = ViewBag.ComplianceAlerts as int? ?? 0;
    var recentTransactions = ViewBag.RecentTransactions as List<dynamic> ?? new List<dynamic>();
    
    // Get greeting based on time of day
    var hour = DateTime.UtcNow.Hour;
    var greeting = hour < 12 ? "Good morning" : hour < 18 ? "Good afternoon" : "Good evening";
}

<div class="customer-dashboard">
    <aside class="sidebar">
        <div class="sidebar__brand">
            <div class="sidebar__logo">
                <i class="bi bi-wallet2"></i>
            </div>
            <div class="sidebar__user-info">
                <small class="sidebar__role">Customer</small>
                <h6 class="sidebar__username">@username</h6>
            </div>
        </div>

        <nav class="sidebar__nav">
            <a asp-controller="Customer" asp-action="Dashboard" class="sidebar__nav-item active">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
            <a asp-controller="TransferMoneyNow" asp-action="Index" class="sidebar__nav-item">
                <i class="bi bi-send-fill"></i>
                <span>Transfer Money</span>
            </a>
            <a asp-controller="Transactions" asp-action="MyTransactions" class="sidebar__nav-item">
                <i class="bi bi-clock-history"></i>
                <span>Transactions</span>
            </a>
            <a asp-controller="Customer" asp-action="Profile" class="sidebar__nav-item">
                <i class="bi bi-person-circle"></i>
                <span>Profile & Limits</span>
            </a>
        </nav>

        <div class="sidebar__footer">
            <form asp-controller="CustomerLogin" asp-action="Logout" method="post">
                <button type="submit" class="sidebar__logout-btn">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </button>
            </form>
        </div>
    </aside>

    <main class="dashboard-content">
        <div class="dashboard-header">
            <div class="dashboard-header__content">
                <h1 class="dashboard-title">@greeting, @username!</h1>
                <p class="dashboard-subtitle">Here's what's happening with your transfers today</p>
            </div>
            <div class="dashboard-header__actions">
                <a asp-controller="TransferMoneyNow" asp-action="Index" class="btn-primary-action">
                    <i class="bi bi-plus-circle-fill"></i>
                    <span>New Transfer</span>
                </a>
            </div>
        </div>

        <!-- Statistics Widgets -->
        <div class="stats-grid">
            <div class="stat-card stat-card--primary">
                <div class="stat-card__background">
                    <i class="bi bi-arrow-repeat"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__icon">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                    <div class="stat-card__info">
                        <span class="stat-card__label">LIVE TRANSFERS</span>
                        <h3 class="stat-card__value">
                            <span class="stat-card__number">@pendingTransactions</span>
                            <span class="stat-card__suffix">pending</span>
                        </h3>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-card--success">
                <div class="stat-card__background">
                    <i class="bi bi-currency-dollar"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__icon">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                    <div class="stat-card__info">
                        <span class="stat-card__label">VOLUME TODAY</span>
                        <h3 class="stat-card__value">
                            <span class="stat-card__number">@currencySymbol@todayVolume.ToString("N2")</span>
                        </h3>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-card--warning">
                <div class="stat-card__background">
                    <i class="bi bi-shield-exclamation"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__icon">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="stat-card__info">
                        <span class="stat-card__label">COMPLIANCE ALERTS</span>
                        <h3 class="stat-card__value">
                            <span class="stat-card__number">@complianceAlerts</span>
                            <span class="stat-card__suffix">open</span>
                        </h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="dashboard-grid">
            <!-- Quick Shortcuts Card -->
            <div class="dashboard-card">
                <div class="dashboard-card__header">
                    <div class="dashboard-card__title">
                        <i class="bi bi-lightning-charge-fill"></i>
                        <h3>Quick Shortcuts</h3>
                    </div>
                    <button class="btn-toggle" onclick="toggleShortcuts()" title="Minimize">
                        <i class="bi bi-dash-lg"></i>
                    </button>
                </div>
                <div class="dashboard-card__body" id="shortcutsContainer">
                    <div class="shortcuts-grid">
                        <a asp-controller="Transactions" asp-action="MyTransactions" class="shortcut-item">
                            <div class="shortcut-item__icon shortcut-item__icon--purple">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <span class="shortcut-item__label">Recent Transfers</span>
                        </a>
                        <a asp-controller="Transactions" asp-action="MyTransactions" class="shortcut-item">
                            <div class="shortcut-item__icon shortcut-item__icon--blue">
                                <i class="bi bi-list-task"></i>
                            </div>
                            <span class="shortcut-item__label">Manage Queue</span>
                        </a>
                        <a asp-controller="TransferMoneyNow" asp-action="Index" class="shortcut-item">
                            <div class="shortcut-item__icon shortcut-item__icon--green">
                                <i class="bi bi-phone-vibrate"></i>
                            </div>
                            <span class="shortcut-item__label">Mobile Transfers</span>
                        </a>
                        <a asp-controller="TransferMoneyNow" asp-action="Index" class="shortcut-item">
                            <div class="shortcut-item__icon shortcut-item__icon--orange">
                                <i class="bi bi-briefcase-fill"></i>
                            </div>
                            <span class="shortcut-item__label">Cash Payouts</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Live Activity Card -->
            <div class="dashboard-card">
                <div class="dashboard-card__header">
                    <div class="dashboard-card__title">
                        <i class="bi bi-activity"></i>
                        <h3>Live Activity</h3>
                    </div>
                    <span class="activity-badge">@recentTransactions.Count()</span>
                </div>
                <div class="dashboard-card__body">
                    @if (recentTransactions != null && recentTransactions.Any())
                    {
                        <div class="activity-feed">
                            @foreach (var transaction in recentTransactions)
                            {
                                <div class="activity-item">
                                    <div class="activity-item__icon">
                                        @{
                                            var status = (TransactionStatus)transaction.Status;
                                            var iconClass = status == TransactionStatus.Paid || status == TransactionStatus.Completed
                                                ? "bi-check-circle-fill activity-item__icon--success"
                                                : status == TransactionStatus.PaymentPending || status == TransactionStatus.InProgress
                                                    ? "bi-hourglass-split activity-item__icon--warning"
                                                    : "bi-info-circle-fill activity-item__icon--info";
                                        }
                                        <i class="bi @iconClass"></i>
                                    </div>
                                    <div class="activity-item__content">
                                        <div class="activity-item__title">@GetTransactionTypeText(transaction)</div>
                                        <div class="activity-item__details">@GetTransactionDetails(transaction)</div>
                                        <div class="activity-item__time">
                                            <i class="bi bi-clock"></i>
                                            @GetTimeAgo((DateTime)transaction.TransactionDate)
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state__icon">
                                <i class="bi bi-inbox"></i>
                            </div>
                            <h4 class="empty-state__title">No Recent Activity</h4>
                            <p class="empty-state__text">Your transaction history will appear here</p>
                            <a asp-controller="TransferMoneyNow" asp-action="Index" class="btn-secondary">
                                <i class="bi bi-plus-circle"></i>
                                Start Your First Transfer
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</div>

@functions {
    private string GetTransactionTypeText(dynamic transaction)
    {
        var status = (TransactionStatus)transaction.Status;
        if (status == TransactionStatus.Paid || status == TransactionStatus.Completed)
        {
            return "Transfer Completed";
        }
        else if (status == TransactionStatus.PaymentPending)
        {
            return "Payment Pending";
        }
        else if (status == TransactionStatus.InProgress)
        {
            return "Transfer In Progress";
        }
        else if (status == TransactionStatus.IdCheckInProgress)
        {
            return "ID Verification Required";
        }
        return "Transfer Updated";
    }

    private string GetTransactionDetails(dynamic transaction)
    {
        var amount = transaction.ReceivingAmount?.ToString("N2") ?? "0.00";
        var currency = transaction.ReceivingCurrency?.ToString() ?? "";
        var countryCode = transaction.ReceivingCountryCode?.ToString() ?? "";
        
        var countryName = countryCode switch
        {
            "NG" => "Lagos",
            "GH" => "Accra",
            "KE" => "Nairobi",
            "ZA" => "Johannesburg",
            "UG" => "Kampala",
            "TZ" => "Dar es Salaam",
            _ => countryCode
        };

        return $"{currency} {amount} – {countryName}";
    }

    private string GetTimeAgo(DateTime transactionDate)
    {
        var timeSpan = DateTime.UtcNow - transactionDate;
        
        if (timeSpan.TotalMinutes < 1)
            return "Just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes}m ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours}h ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays}d ago";
        
        return transactionDate.ToString("MMM d, yyyy");
    }
}

